# Geo Images Configuration
# Copy this file to .env and customize the values

# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Default Directories
DEFAULT_PHOTO_DIR=~/pics
DATA_DIR=./data
LOGS_DIR=./logs

# Timeline Processing
TIMELINE_TOLERANCE_MINUTES=60
BATCH_SIZE=25

# Enhanced Fallback Settings
ENHANCED_FALLBACK_ENABLED=true
MAX_TOLERANCE_HOURS=24
PROGRESSIVE_SEARCH=true

# Timeline Augmentation
TIMELINE_AUGMENTATION_ENABLED=true
EXACT_TIME_TOLERANCE_MINUTES=2
CREATE_BACKUP=true

# Database Settings
ENABLE_SQLITE_PERSISTENCE=true
VALIDATE_COORDINATES=true
COORDINATE_SYSTEM=WGS84

# Performance Settings
MAX_MEMORY_USAGE_MB=1024
ENABLE_MEMORY_MONITORING=true

# Security Settings
ENABLE_FILE_VALIDATION=true
MAX_FILE_SIZE_MB=100

# Export Settings
EXPORT_FORMAT=json
EXPORT_INCLUDE_METADATA=true

# Development Settings (only used in development)
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_LOGGING=false
MOCK_TIMELINE_DATA=false